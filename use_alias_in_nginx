server {
    listen 80;
    server_name localhost;

    # 1️⃣ Root path - Serve login site
    location / {
        alias /var/www/login-site/;
        index index.html;
        try_files $uri $uri/ =404;
    }

    # 2️⃣ /static/ - Serve from Desktop/nginx
    location /static/ {
        proxy_pass http://localhost:5000/;
        proxy_set_header Host $host;
    }

    # 3️⃣ /port/ - Serve from Desktop/nginx/port
    location /port/ {
        alias /home/salman/Desktop/nginx/port/;
        autoindex on;
        try_files $uri $uri/ =404;
    }
}
